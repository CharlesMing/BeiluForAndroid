<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    tools:showIn="@layout/frag_action_list">

    <com.scj.beilu.app.widget.SquareCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="5dp">

        <ImageView
            android:id="@+id/iv_action_info_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:background="#2299" />

        <ImageView
            android:id="@+id/iv_action_lock_transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#46000000" />

        <ImageView
            android:id="@+id/iv_action_lock"
            android:layout_width="18dp"
            android:layout_height="21dp"
            android:layout_gravity="right"
            android:layout_margin="11dp"
            android:background="@drawable/ic_lock" />
    </com.scj.beilu.app.widget.SquareCardView>

    <TextView
        android:id="@+id/tv_action_info_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="有器械"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_13" />


</LinearLayout>