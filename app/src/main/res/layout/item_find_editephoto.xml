<?xml version="1.0" encoding="utf-8"?>
<com.scj.beilu.app.widget.SquareCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp">

    <ImageView
        android:id="@+id/iv_publish_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/iv_del_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="right"
        android:scaleType="center"
        android:src="@drawable/ic_find_deletephoto" />

</com.scj.beilu.app.widget.SquareCardView>
