<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.scj.beilu.app.widget.AppToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:toolbar_show_elevation="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="随时记录你的身体变化"
        android:textColor="@android:color/black"
        android:textSize="23sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="你是哪个TA？"
        android:textColor="@android:color/black"
        android:textSize="19sp" />


    <ImageView
        android:id="@+id/iv_fit_sex_man"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/ic_fit_record_sex_man"
        android:foreground="@drawable/btn_borderless_mtrl" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="我是男生"
        android:textColor="#ff999999"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/iv_fit_sex_woman"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/ic_fit_record_sex_woman"
        android:foreground="@drawable/btn_borderless_mtrl" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="我是女生"
        android:textColor="#ff999999"
        android:textSize="14sp" />
</LinearLayout>